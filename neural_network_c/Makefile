CFLAGS= -lpapi -L/usr/local/lib64
OPT=-O3
REPORT=

PAPI_EVENTS_F=PAPI_FP_OPS|PAPI_TOT_CYC|PAPI_TOT_INS
PAPI_EVENTS_M=PAPI_L1_DCA|PAPI_L1_DCM|PAPI_L2_DCA|PAPI_L2_DCM
# PAPI_EVENTS=PAPI_FP_OPS|PAPI_TOT_CYC|PAPI_TOT_INS|PAPI_L1_DCA|PAPI_L1_DCH|PAPI_L1_DCM|PAPI_L1_DCR|PAPI_L1_DCW|PAPI_L2_DCA|PAPI_L2_DCH|PAPI_L2_DCM|PAPI_L2_DCR|PAPI_L2_DCW
# PAPI_LSU_IDL - load/store idle
PAPI_EVENTS2=PAPI_FP_OPS|PAPI_TOT_CYC

all: main.o
	g++ main.o -o main $(CFLAGS) $(OPT)

clean:
	rm -f *.o main

run:
	PAPI_EVENTS='$(PAPI_EVENTS_F)' ./main
runm:
	PAPI_EVENTS='$(PAPI_EVENTS_M)' ./main
run2:
	PAPI_EVENTS='$(PAPI_EVENTS2)' ./main
